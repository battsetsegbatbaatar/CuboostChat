{
  "compilerOptions": {
    "outDir": "public",
    "rootDir": "./src",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "sequelize", "express-serve-static-core"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
